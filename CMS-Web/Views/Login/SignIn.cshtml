@model CMS_DTO.CMSCustomer.ClientLoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng nhập";
}

<main class="main-content">
    <div id="login-page" class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="login-box">
                    <div class="note form-success" id="ResetSuccess" style="display:none;">
                        We've sent you an email with a link to update your password.
                    </div>
                    <div id="idCustomerLoginForm">
                        @using (@Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", }))
                        {
                            <input type="hidden" name="form_type" value="customer_login"><input type="hidden" name="utf8" value="✓">
                            <h1>Đăng nhập</h1>
                            <label for="CustomerEmail" class="label-login">Địa chỉ Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "account_input form-control", @id = "CustomerEmail", @placeholder = "*Địa chỉ Email", @type = "email", @required = "required" })
                            <label for="CustomerPassword" class="label-login">Mật khẩu</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "password_input form-control", @id = "password", @placeholder = "*Mật khẩu", @type = "password", @required = "required" })
                            <p class="lost_password form-group">
                                <a href="#recover" id="idRecoverPassword">Quên mật khẩu?</a>
                            </p>
                            <p>
                                <button type="submit" id="SubmitLogin" name="SubmitLogin" class="btn btn-outline">
                                    <span>
                                        <i class="fa fa-lock"></i>&nbsp;
                                        Đăng nhập
                                    </span>
                                </button>
                                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label label-danger", })
                            </p>
                        }
                    </div>
                    <div id="idRecoverPasswordForm" style="display: none;">
                        <h2>Cập nhập mật khẩu</h2>
                        <p>Chúng tôi sẽ gửi thông tin xuống địa chỉ Email bạn cung cấp.</p>
                        @using (@Html.BeginForm("ForgetPassword", "Login", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data", @style = "margin-top:5%" }))
                        {
                            <input type="hidden" name="form_type" value="recover_customer_password"><input type="hidden" name="utf8" value="✓">
                            <label for="RecoverEmail" class="label-login">Địa chỉ Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "RecoverEmail", @placeholder = "*Địa chỉ Email", @type = "email", @required = "required" })
                            <p>
                                <input type="submit" class="btn btn-outline" value="Submit">
                            </p>
                            <button type="button" id="idHideRecoverPasswordLink" class="text-link btn btn-outline-inverse">
                                <span>
                                    <i class="fa fa-long-arrow-left"></i>&nbsp;
                                    Quay lại đăng nhập
                                </span>
                            </button>
                        }
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="register-box">
                    <h3>Tạo tài khoản</h3>
                    <div class="register_des">
                        <p>Đăng ký để nhận ưu đãi từ chúng tôi. Bạn sẽ được cảm nhận sự thoải mái cũng như tin tưởng vào sự lựa chọn từ chúng tôi!</p>
                    </div>
                    <div class="submit">
                        <a class="btn btn-outline exclusive" href="@Url.Action("SignUp","Login")">
                            <span>
                                <i class="fa fa-user"></i>&nbsp;
                                Tạo một tài khoản
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script type="text/javascript">

    $('#idRecoverPassword').click(function () {
        debugger;
        $('#idCustomerLoginForm').hide();
        $('#idRecoverPasswordForm').show();
    });

    $('#idHideRecoverPasswordLink').click(function () {
        $('#idRecoverPasswordForm').hide();
        $('#idCustomerLoginForm').show();
    });
</script>


